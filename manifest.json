{
  "name": "SWeb Saver",
  "version": "1.0",
  "description": "Just testing",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["background.js"]
  },  
  "content_scripts": [
    {
      "matches": [
        "https://www.similarweb.com/website/*"
      ],
      "js": [
        "page.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "SWeb Saver"
  },
  "options_page": "options.html",
  "manifest_version": 2
}